<div>
  <h3>Articles</h3>

  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <% articles.each do |article| %>
        <% click = 'showArticle('+article.id.to_s+')' %>
        <tr>
          <td><%= article.title %></td>
          <td>
            <%#= link_to 'Show', article, class: 'btn btn-info' %>
            <%= button_tag 'Show', type: 'button', class: 'btn btn-info', 'data-toggle': 'modal', 'data-target': '#showModal', onclick: click %>
          </td>
          <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', article, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
</div>
