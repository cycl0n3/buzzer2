<div class="section" ng-app="ArticlesApp">
  <div ng-controller="ArticlesController">
    <h3>Articles</h3>

    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <tr ng-repeat="article in articles">
          <td>{{article.title}}</td>
          <td><a class="btn btn-info" href="<%= url_for controller: 'articles' %>/{{article.id}}">Show</a></td>
          <td><a class="btn btn-warning" href="<%= url_for controller: 'articles' %>/{{article.id}}/edit">Edit</a></td>
          <td>
            <a data-confirm="Are you sure?" class="btn btn-danger" rel="nofollow" data-method="delete" href="<%= url_for controller: 'articles' %>/{{article.id}}">Destroy</a>
          </td>
        </tr>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
  </div>
</div>

<%= javascript_include_tag 'articles/articles-index' %>
